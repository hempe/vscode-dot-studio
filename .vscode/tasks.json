{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "group": "build",
            "presentation": {
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "type": "npm",
            "script": "watch",
            "group": "build",
            "isBackground": true,
            "presentation": {
                "panel": "dedicated",
                "reveal": "always"
            },
            "problemMatcher": [
                {
                    "owner": "webpack",
                    "pattern": {
                        "regexp": "^\\s*ERROR in (.*)$",
                        "file": 1
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "webpack is watching the files",
                        "endsPattern": "(webpack \\d+\\.\\d+\\.\\d+|compiled)"
                    }
                }
            ]
        }
    ]
}