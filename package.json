{
  "name": "dotnet-extension",
  "displayName": ".NET Extension",
  "description": "Enhanced .NET development features including NuGet UI, solution support, and project management",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*.sln"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "solution-explorer": [
        {
          "id": "dotnet-solution-webview",
          "name": "Solution Explorer",
          "type": "webview",
          "when": "workspaceHasDotnetFiles"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "solution-explorer",
          "title": "Solution",
          "icon": "$(folder-library)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "compile": "tsc -p ./",
    "compile:extension": "webpack --mode development --config-name extension",
    "compile:webview": "webpack --mode development --config-name webview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "@vscode/codicons": "^0.0.35",
    "glob": "^10.4.5",
    "minimatch": "^9.0.3",
    "uuid": "^13.0.0",
    "vscrui": "^0.2.2",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/minimatch": "^5.1.2",
    "@types/node": "16.x",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/sinon": "^10.0.16",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/vscode": "^1.74.0",
    "@types/xml2js": "^0.4.14",
    "@vscode/test-electron": "^2.3.4",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sinon": "^15.2.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.4",
    "typescript": "^4.9.5",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
